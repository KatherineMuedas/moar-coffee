<h3> Edit Caf&eacute; </h3>
<%= form_for @shop do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :website %>
  <%= f.text_field :website %>

  <%= f.submit "Update Cafe" %>
<% end %>

  <%= link_to 'Edit Café', edit_shop_path(@shop.id)%> 
  <%= link_to 'Show Café', shop_path(@shop.id)%>