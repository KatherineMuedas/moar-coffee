<%= render 'shops/sidebar' %>
  <div class= "small-10 columns">
    <h1 class = "shop-name"><%= @shop.name %></h1>
    <h2><%= @shop.description %></h2>
    <h2><%= link_to @shop.website, url_with_http_protocol(@shop.website), :target => '_blank' %></h2> 
    <%= link_to '#', class: "button", data: {"reveal-id" => "addPhoto"} do %>
      <i class= "fa fa-camera"></i> Add a photo
    <% end %>
    <% if @shop.followed_by?(current_user) %>
      <%= link_to "Unfollow", shop_follow_path(shop_id: @shop), method: :delete %>
    <% else %>
      <%= link_to "Follow", shop_follows_path(shop_id: @shop ), method: :post %>
    <% end %>
    <div class="row">
      <%= render 'pictures/display_photos' %>
    </div>
    <hr>
  
    <% if @shop.location %>
      <p><%= @shop.location.street_address %></p>
      <p><%= @shop.location.city %>,<%= @shop.location.state %> <%= @shop.location.zipcode %></p>
      <p><%= @shop.location.latitude %>, <%= @shop.location.longitude %></p>
      <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@shop.location.latitude},#{@shop.location.longitude}&zoom=16&size=400x400" %>
    <% end %>
    <br>
  </div> 
  <div id="addPhoto" class="reveal-modal small" data-reveal>
  <%= render "shops/photo_upload" %>
  <a class="close-reveal-modal">&#215;</a>
  </div> 