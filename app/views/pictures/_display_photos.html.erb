<ul class="small-block-grid-2 medium-block-grid-4 clearing-thumbs" data-clearing> 
  <% @pictures.first(4).each do |picture| %>
    <li><%= link_to image_tag(picture.photo.url(:medium), class: "th radius"), picture.photo.url(:large) %></li>
  <% end %>
</ul>
<% unless @pictures[5].nil? %>
  <%= link_to 'View all photos...', '#', class: 'right' %>
<% end %>