<div  class= "big-container ">
  <div class="row">
    <div class="small-4 columns medium-4 columns photo-item">
       <%= image_tag @user.avatar.url(:medium), class: "user-medium" %>
    </div>
    <div class="small-8 medium-6 columns">
      <h1><%= @user.name%></h1>
      <td>Points: <%= @user.points %></td> 
      <br>
      <td>Rank: <%= @user.rank.humanize %></td>
      <% if current_user && @user.id == current_user.id %> 
        <p><%= link_to 'Edit My Account', edit_user_registration_path, class: "button tiny" %></p> 
      <% end %> 
    </div>

    <div class="small-12 medium-2 columns">
      <% if @user.id != current_user.id %>
        <% if @user.followed_by?(current_user) %>
          <%= link_to "Unfollow", user_follow_user_path(user_id: @user), method: :delete, class: "button tiny primary" %>
        <% else %>
          <%= link_to "Follow", user_follow_users_path(user_id: @user ), method: :post, class: "button tiny primary" %>
        <% end %>
      <% end %>
    </div>
  </div>  
</div>  

<div class="row">
  <div  class="small-12 medium-4 columns">
    <div class="top-container">
      <h5>My Favorite Drinks</h5>
    </div>
    <div class='bottom-container'>
      <%= render 'users/favorite_drinks' %>
    </div>
    <div class="top-container">  
    <h5>Shops I'm Following</h5>
    </div>
    <div class="bottom-container">
      <ul>
        <% if current_user.id == @user.id %>
          <% @shop_follows.each do |follow| %>
          <li class="margin-left-10"><%= link_to follow[:name], shop_path(follow.friendly_id) %> | <%= link_to '',shop_follows_delete_path(shop_id: follow.id),class:"fa fa-bomb",
                                                                                        method: :delete %></li>
          <hr>
          <% end %>

        <% end %>
      </ul>
    </div>  
    <div class="top-container">  
    <h5>Users I'm Following</h5>
    </div>
    <div class='bottom-container'>
      <ul>
        <% if current_user.id == @user.id %>
        <% @user_follows.each do |follow| %>
          <li class="margin-left-10"><%= link_to follow[:name], user_path(follow.friendly_id) %> | <%= link_to '', user_follow_user_path(user_id: follow.id), class:"fa fa-bomb", method: :delete %></li>
          <% end %>
        <% end %>
      </ul>
    </div>  
  </div> 
  <div class="small-12 large-8 columns">
    <div class="top-container">
      <h5>My Photos</h5>
    </div>
    <%= render 'pictures/display_photos' %>

    <div class="top-container">    
      <h5>Recent Activity</h5>
    </div> 
    <div class='big-container'>
      <% @reviews.each do |review|%>
        <div class="each-box">
          <div class="small-12 columns ">
            <p>
              Review <%= link_to review.drink.name, shop_drink_path(review.shop.id, review.drink.id) %> from <%= link_to review.shop.name, shop_path(review.shop.id) %>
            </p>
            <p>
              <% review.drink_rating.times do  %>
                <span><i class = "fa fa-coffee coffee fa-lg"></i></span>  
              <% end %> - <%= review.title %>
            </p>
            <p>
              <%= review.body %>
            </p> 
          </div>
            <div class="links">
              <% if current_user && @user.id == current_user.id %>
                <%= link_to drink_review_path(review.drink.id, review.id), method: :delete, data: { confirm: 'Are you sure you want to delete this review?' } do %>
                  <i class="fa fa-trash-o danger absolute-icon"></i>
                <% end %>
              <% end %> 
            </div>
          <hr>
        </div>
      <% end %> 
    </div>  
  </div>  
</div>

 
