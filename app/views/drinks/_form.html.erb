<%= simple_form_for ([@shop, @shop.drinks.build]), remote: true do |f| %>
  
  <h3 class='text-center'>Add a Coffee</h3>
  <div class="form-group">
    <%= f.input :name %><br>
  </div>
 
  <div class="form-group">
    <%= f.input :description %><br>
  </div>

  <p>
  <%= f.submit 'Submit', :class => 'button right' %> 
  </p>  
<% end %>