<div class="row ">
  <div class="large-3 columns show-for-large-up ">
    <div class= "container sidebar">
      <%= render 'shops/sidebar' %>
    </div>
  </div>  
  <div class="small-12 large-9 columns">
    <div class= "container information-display">
      <div class="row">
        <div class="hide-for-small-only medium-3 columns photo-item">
          <% if @drink.pictures.first %>
            <%= image_tag(@drink.pictures.first.photo.url(:medium), class: "th radius")  %>
          <% else %>
            <%= image_tag("http://placehold.it/300x300", class: "th radius")  %>
          <% end %>  
        </div>
        <div class="small-12 medium-9 columns">
          <h1><%= @drink.name %></h1>
          <p><%= @drink.description %></p>
          <div class="info-links center-on-small"> 
            <p>
              <% if current_user %>
                <%= link_to '#', class: "button tiny primary", data: {"reveal-id" => "addPhoto"} do %>
                  <i class="fa fa-camera fa-lg"></i>
                <% end %> 
                <span class = "favorite-buttons">     
                  <% if @favorite.nil? || false %>
                    <%= render 'favorites/favorite_button' %>
                  <% elsif @favorite.favorable %>
                    <%= render 'favorites/unfavorite_button' %>
                  <% end %>
                </span>
              <% end %>
            </p>       
          </div>   
        </div>    
      </div> 
    </div>   
      
    <div class="row">    
      <%= render 'pictures/display_photos' %>
    </div>  
      <hr>
    <% if current_user %>
      <a href="#" data-reveal-id="addReview" class= " Radius button primary"><i class="fa fa-plus fa-lg"></i> Add a new review</a>  
    <% end %>              
    <div class= "container activity-display">
        <%= render 'reviews/drink_reviews' %>
    </div>  
  </div> 
</div>   


  <!-- Modal Divs -->
<% if current_user %>
  <div id="addReview" class="reveal-modal small" data-reveal>
    <%= render "reviews/form_reviews" %>
    <a class="close-reveal-modal">&#215;</a>
  </div> 
  <div id="addPhoto" class="reveal-modal small" data-reveal>
    <%= render "drinks/photo_upload" %>
    <a class="close-reveal-modal">&#215;</a>
  </div> 
<% end %>

