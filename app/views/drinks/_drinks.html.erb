<% @drinks.each do |drink| %>
  <h2>
    <%= drink.name %> | <%=link_to 'Edit', edit_shop_drink_path(@shop.id, drink.id), class: "button tiny" %>
  </h2> 
  <% if drink.reviews.empty? %>
    <h4> No Reviews to Display</h4>
  <% end %>
  <% drink.reviews.each do |review| %>
    <h4>
      <%= review.user.name %>: <%= review.title %>
    </h4>
    <p>
    <% review.drink_rating.times do  %>
      <span><i class = "fa fa-coffee coffee fa-lg"></i></span>  
    <% end %>
    </p>
    <p>
      <%= review.body %>
    </p>
    <p>
      <% if current_user && review.user_id == current_user.id %> 
        <%= link_to 'Delete', drink_review_path(drink.id , review.id), method: :delete, data: {confirm: 'Are you sure you want to delete this review?'} %>
      <% end %>
    </p>                              
    <hr>
  <% end %>
  <%= render "reviews/form_reviews", drink: drink %>
<% end %>    
